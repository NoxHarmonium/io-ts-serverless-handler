{
  "name": "io-ts-serverless-handler",
  "version": "2.0.0",
  "description": "A simple wrapper for Serverless Framework HTTP handlers to remove the boilerplate of using io-ts codecs to validate and extract request parameters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Sean Dawson <contact@seandawson.info>",
  "repository": {
    "type": "git",
    "url": "https://github.com/NoxHarmonium/io-ts-serverless-handler"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "fp-ts": "^1.19.5",
    "io-ts": "^1.10.4"
  },
  "scripts": {
    "prepare": "tsc",
    "build": "tsc",
    "test": "jest",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint-fix": "tslint --fix -p tsconfig.json -c tslint.json",
    "format-check": "prettier-check src/**/*",
    "type-coverage": "type-coverage --strict --detail --ignore-catch",
    "format": "prettier --write '{src,test}/**/*.{ts,tsx}'",
    "commit": "git-cz",
    "quality-check": "yon test && yon lint && yon format-check && yon type-coverage",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@codechecks/build-size-watcher": "^0.1.0",
    "@codechecks/client": "^0.1.10",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@jedmao/semantic-release-npm-github-config": "^1.0.9",
    "@types/aws-lambda": "^8.10.39",
    "@types/jest": "^24.0.25",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "fp-ts": "^2.4.1",
    "husky": "^4.2.3",
    "io-ts": "^2.0.5",
    "io-ts-types": "^0.5.6",
    "jest": "^24.9.0",
    "jest-each": "^24.9.0",
    "monocle-ts": "^2.1.0",
    "newtype-ts": "^0.3.4",
    "prettier": "^1.19.1",
    "prettier-check": "^2.0.0",
    "semantic-release": "^17.0.4",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-immutable": "^6.0.1",
    "tslint-sonarts": "^1.9.0",
    "type-coverage": "^2.4.0",
    "typecov": "^0.2.1",
    "typescript": "^3.7.4",
    "yarn-or-npm": "^3.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "type-fest": "^0.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yon quality-check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "typeCoverage": {
    "atLeast": 100
  }
}
